	  <Content Update="Test\XmlFiles\xBindFunctionSingleParamWithPath.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </Content>
	  <Content Update="Test\XmlFiles\EmptyAttachedPropertyNode.xaml">
