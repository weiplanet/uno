<Page
    x:Class="UITests.Windows_Storage.Pickers.DownloadFileSavePickerTests"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UITests.Windows_Storage.Pickers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <ScrollViewer
        MaxWidth="800"
        Padding="12,12,24,12"
        HorizontalContentAlignment="Left">
        <StackPanel Spacing="8">
            <Button
                Margin="0,10,10,0"
                Click="SavePdfButton_Click"
                Content="Save pdf" />
            <Button
                Margin="0,10,10,0"
                Click="SaveImgButton_Click"
                Content="Save image" />
            <Button
                Margin="0,10,10,0"
                Click="SaveTxtButton_Click"
                Content="Save txt" />

            <TextBlock Text="File name:" />
            <TextBlock x:Name="FileName" />

            <TextBlock Text="File path:" />
            <TextBlock x:Name="FilePath" />

            <TextBlock Text="File Status:" />
            <TextBlock x:Name="FileUpdateStatus" />

            <TextBlock Text="Action output:" />
            <TextBlock x:Name="OutputTextBlock" />

        </StackPanel>
    </ScrollViewer>
</Page>
