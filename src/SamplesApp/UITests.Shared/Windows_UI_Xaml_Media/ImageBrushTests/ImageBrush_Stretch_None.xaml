<UserControl
	x:Class="Uno.UI.Samples.UITests.ImageBrushTestControl.ImageBrush_Stretch_None"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Uno.UI.Samples.UITests.ImageBrushTestControl"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="300"
	d:DesignWidth="400">

	<ScrollViewer>

		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>

			<StackPanel Grid.Column="0">

				<TextBlock Text="Image" />

				<!-- 100x100 -->
				<TextBlock Text="100x100" />

				<Image Height="100"
					   Width="100"
					   Source="ms-appx:///Assets/test_image_100_100.png"
					   Stretch="None" />

				<Image Height="100"
					   Width="100"
					   Source="ms-appx:///Assets/test_image_100_100.png"
					   Stretch="Fill" />

				<Image Height="100"
					   Width="100"
					   Source="ms-appx:///Assets/test_image_100_100.png"
					   Stretch="Uniform" />

				<Image Height="100"
					   Width="100"
					   Source="ms-appx:///Assets/test_image_100_100.png"
					   Stretch="UniformToFill" />

				<!-- 200x100 -->
				<TextBlock Text="200x100" />

				<Image Height="100"
					   Width="200"
					   Source="ms-appx:///Assets/test_image_100_100.png"
					   Stretch="None" />

				<Image Height="100"
					   Width="200"
					   Source="ms-appx:///Assets/test_image_100_100.png"
					   Stretch="Fill" />

				<Image Height="100"
					   Width="200"
					   Source="ms-appx:///Assets/test_image_100_100.png"
					   Stretch="Uniform" />

				<Image Height="100"
					   Width="200"
					   Source="ms-appx:///Assets/test_image_100_100.png"
					   Stretch="UniformToFill" />

				<!-- 50x100 -->
				<TextBlock Text="50x100" />

				<Image Height="100"
					   Width="50"
					   Source="ms-appx:///Assets/test_image_100_100.png"
					   Stretch="None" />

				<Image Height="100"
					   Width="50"
					   Source="ms-appx:///Assets/test_image_100_100.png"
					   Stretch="Fill" />

				<Image Height="100"
					   Width="50"
					   Source="ms-appx:///Assets/test_image_100_100.png"
					   Stretch="Uniform" />

				<Image Height="100"
					   Width="50"
					   Source="ms-appx:///Assets/test_image_100_100.png"
					   Stretch="UniformToFill" />

			</StackPanel>

			<StackPanel Grid.Column="1">

				<TextBlock Text="ImageBrush" />

				<!-- 100x100 -->
				<TextBlock Text="100x100" />

				<Border Width="100"
						Height="100">
					<Border.Background>
						<ImageBrush ImageSource="ms-appx:///Assets/test_image_100_100.png"
									Stretch="None" />
					</Border.Background>
				</Border>

				<Border Width="100"
						Height="100">
					<Border.Background>
						<ImageBrush ImageSource="ms-appx:///Assets/test_image_100_100.png"
									Stretch="Fill" />
					</Border.Background>
				</Border>

				<Border Width="100"
						Height="100">
					<Border.Background>
						<ImageBrush ImageSource="ms-appx:///Assets/test_image_100_100.png"
									Stretch="Uniform" />
					</Border.Background>
				</Border>

				<Border Width="100"
						Height="100">
					<Border.Background>
						<ImageBrush ImageSource="ms-appx:///Assets/test_image_100_100.png"
									Stretch="UniformToFill" />
					</Border.Background>
				</Border>

				<!-- 200x100 -->
				<TextBlock Text="200x100" />

				<Border Width="200"
						Height="100">
					<Border.Background>
						<ImageBrush ImageSource="ms-appx:///Assets/test_image_100_100.png"
									Stretch="None" />
					</Border.Background>
				</Border>

				<Border Width="200"
						Height="100">
					<Border.Background>
						<ImageBrush ImageSource="ms-appx:///Assets/test_image_100_100.png"
									Stretch="Fill" />
					</Border.Background>
				</Border>

				<Border Width="200"
						Height="100">
					<Border.Background>
						<ImageBrush ImageSource="ms-appx:///Assets/test_image_100_100.png"
									Stretch="Uniform" />
					</Border.Background>
				</Border>

				<Border Width="200"
						Height="100">
					<Border.Background>
						<ImageBrush ImageSource="ms-appx:///Assets/test_image_100_100.png"
									Stretch="UniformToFill" />
					</Border.Background>
				</Border>

				<!-- 50x100 -->
				<TextBlock Text="50x100" />

				<Border Width="50"
						Height="100">
					<Border.Background>
						<ImageBrush ImageSource="ms-appx:///Assets/test_image_100_100.png"
									Stretch="None" />
					</Border.Background>
				</Border>

				<Border Width="50"
						Height="100">
					<Border.Background>
						<ImageBrush ImageSource="ms-appx:///Assets/test_image_100_100.png"
									Stretch="Fill" />
					</Border.Background>
				</Border>

				<Border Width="50"
						Height="100">
					<Border.Background>
						<ImageBrush ImageSource="ms-appx:///Assets/test_image_100_100.png"
									Stretch="Uniform" />
					</Border.Background>
				</Border>

				<Border Width="50"
						Height="100">
					<Border.Background>
						<ImageBrush ImageSource="ms-appx:///Assets/test_image_100_100.png"
									Stretch="UniformToFill" />
					</Border.Background>
				</Border>

			</StackPanel>
		
		</Grid>
	</ScrollViewer>

</UserControl>
