<Page
	x:Class="UITests.Shared.Windows_UI_Input.GestureRecognizerTests.Manipulation_Basics"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:UITests.Shared.Windows_UI_Input.GestureRecognizerTests"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="100" />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<StackPanel>
			<CheckBox
				x:Name="ManipSystem"
				Content="System"
				IsChecked="False"
				Checked="UpdateManipulation"
				Unchecked="UpdateManipulation" />
			<CheckBox
				x:Name="ManipTranslateX"
				Content="Translate X"
				IsChecked="True"
				Checked="UpdateManipulation"
				Unchecked="UpdateManipulation" />
			<CheckBox
				x:Name="ManipTranslateY"
				Content="Translate Y" 
				IsChecked="True"
				Checked="UpdateManipulation"
				Unchecked="UpdateManipulation" />
			<CheckBox
				x:Name="ManipScale"
				Content="Scale"
				IsChecked="True"
				Checked="UpdateManipulation"
				Unchecked="UpdateManipulation" />
			<CheckBox
				x:Name="ManipRotate"
				Content="Rotate"
				IsChecked="True"
				Checked="UpdateManipulation"
				Unchecked="UpdateManipulation" />
		</StackPanel>

		<Border
			x:Name="TouchTarget"
			Grid.Column="1"
			Background="DeepPink"
			ManipulationStarting="OnManipStarting"
			ManipulationStarted="OnManipStarted"
			ManipulationDelta="OnManipDelta"
			ManipulationCompleted="OnManipCompleted"/>

		<TextBlock
			x:Name="Output"
			Grid.Column="1"
			FontSize="10"
			TextWrapping="Wrap"
			IsHitTestVisible="False" />

		<TextBlock
			x:Name="Previous"
			Grid.Column="1"
			Margin="0,20,0,0"
			FontSize="8"
			TextWrapping="Wrap"
			IsHitTestVisible="False" />
	</Grid>
</Page>
