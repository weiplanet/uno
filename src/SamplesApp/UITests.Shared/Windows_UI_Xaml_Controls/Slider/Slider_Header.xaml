<Page
    x:Class="UITests.Windows_UI_Xaml_Controls.Slider.Slider_Header"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UITests.Windows_UI_Xaml_Controls.Slider"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<StackPanel>
		<Slider>
			<Slider.Header>
				<TextBlock x:Name="HorizontalSliderHeaderContent" Text="This is a Slider Header" />
			</Slider.Header>
		</Slider>
		<Slider Orientation="Vertical">
			<Slider.Header>
				<TextBlock x:Name="VerticalSliderHeaderContent" Text="This is a Slider Header" />
			</Slider.Header>
		</Slider>
	</StackPanel>
</Page>
