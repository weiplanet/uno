<Page
    x:Class="UITests.Windows_UI_Xaml_Controls.AutoSuggestBoxTests.AutoSuggestBox_BitmapIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UITests.Windows_UI_Xaml_Controls.AutoSuggestBoxTests"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<StackPanel x:Name="RootPanel">
		<AutoSuggestBox VerticalAlignment="Top">
			<AutoSuggestBox.QueryIcon>
				<local:MeasuredBitmapIcon UriSource="ms-appx:///Assets/Icons/search.png" ShowAsMonochrome="False" />
			</AutoSuggestBox.QueryIcon>
		</AutoSuggestBox>
		<Button Click="Button_Click">Test</Button>
	</StackPanel>
</Page>
