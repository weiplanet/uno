<Page
    x:Class="UITests.Windows_UI_Xaml_Controls.SplitView.SplitViewClip"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UITests.Windows_UI_Xaml_Controls.SplitView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid x:Name="WrapperGrid">
        <Border
            x:Name="TargetRect"
            Margin="0,0,48,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" />
        <SplitView
            x:Name="Split"
            Background="Blue"
            CompactPaneLength="48"
            DisplayMode="CompactOverlay"
            IsPaneOpen="False"
            OpenPaneLength="200"
            PaneBackground="Red"
            PanePlacement="Right">
            <SplitView.Content>
                <Button x:Name="PaneToggle" Click="Button_Click">Toggle</Button>
            </SplitView.Content>
            <SplitView.Pane>
                <TextBlock
                    Margin="20"
                    FontSize="15"
                    Text="This test is very long and should be clipped!"
                    TextWrapping="Wrap" />
            </SplitView.Pane>
        </SplitView>
    </Grid>
</Page>
