<Page
	x:Class="UITests.Windows_UI_Xaml_Controls.LoopingSelectorTests.LoopingSelector_Items"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<StackPanel Spacing="6" HorizontalAlignment="Left">
		<TextBlock>Pick a Shadok number...</TextBlock>
		<Grid HorizontalAlignment="Left">
			<Border x:Name="loopingSelectorContainer"
					Width="200"
					Height="420"
					Background="Yellow"
					BorderBrush="Aqua"
					BorderThickness="2" />
			<Rectangle
				IsHitTestVisible="False"
				Opacity="0.5"
				Stroke="Red"
				StrokeThickness="3"
				StrokeDashArray="2 4"
				Width="220"
				Height="30"/>
			<Rectangle
				IsHitTestVisible="False"
				Opacity="0.5"
				Stroke="Red"
				StrokeThickness="1"
				StrokeDashArray="2 4"
				Width="230"
				Height="90"/>
			<Rectangle
				IsHitTestVisible="False"
				Opacity="0.5"
				Stroke="Red"
				StrokeThickness="1"
				StrokeDashArray="2 4"
				Width="240"
				Height="150"/>
			<Rectangle
				IsHitTestVisible="False"
				Opacity="0.5"
				Stroke="Red"
				StrokeThickness="1"
				StrokeDashArray="2 4"
				Width="250"
				Height="210"/>
			<Rectangle
				IsHitTestVisible="False"
				Opacity="0.5"
				Stroke="Red"
				StrokeThickness="1"
				StrokeDashArray="2 4"
				Width="260"
				Height="270"/>
			<Rectangle
				IsHitTestVisible="False"
				Opacity="0.5"
				Stroke="Red"
				StrokeThickness="1"
				StrokeDashArray="2 4"
				Width="270"
				Height="330"/>
		</Grid>
		<TextBlock x:Name="selection" />
	</StackPanel>
</Page>
