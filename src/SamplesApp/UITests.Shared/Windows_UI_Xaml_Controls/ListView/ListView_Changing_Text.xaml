<UserControl
	x:Class="SamplesApp.Windows_UI_Xaml_Controls.ListView.ListView_Changing_Text"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignHeight="300"
	d:DesignWidth="400">
	
	<ListView ItemsSource="{Binding [SampleItems]}">
		<ListView.ItemTemplate>
			<DataTemplate>
				<StackPanel>
					<CheckBox x:Name="CheckBox"
							  Content="Toggle to change text" />
					<TextBlock x:Name="ToggleTextBlock"
							   Text="{Binding IsChecked, ElementName=CheckBox}" />
				</StackPanel>
			</DataTemplate>
		</ListView.ItemTemplate>
	</ListView>
	
</UserControl>
