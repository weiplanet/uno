<UserControl
	x:Class="SamplesApp.Windows_UI_Xaml_Controls.ListView.ListView_CacheLength_Slow_Load" 
	xmlns:controls="using:Uno.UI.Samples.Controls"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:u="using:Uno.UI.Samples.Controls"
	xmlns:ios="http://uno.ui/ios"
	xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:android="http://uno.ui/android"
	xmlns:local="using:SamplesApp.Windows_UI_Xaml_Controls.ListView"
	mc:Ignorable="d ios android"
	d:DesignHeight="2000"
	d:DesignWidth="400">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="DelayedImagePresenter/DelayedImagePresenter.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

				<ListView Height="300"
					  Width="230"
					  Background="Gray"
					  x:Name="MyListView"
					  ItemsSource="{Binding GoogleBanners}">
				<ListView.ItemTemplate>
					<DataTemplate>
						<StackPanel Height="140"
									Width="200"
									BorderBrush="Blue"
									BorderThickness="2"
									Margin="2">
							<TextBlock Text="{Binding Tail}" />
							<local:DelayedImagePresenter Source="{Binding Uri}"
								   Width="200"
								   Height="80" />
						</StackPanel>
					</DataTemplate>
				</ListView.ItemTemplate>
				<ListView.ItemsPanel>
					<ItemsPanelTemplate>
						<ItemsStackPanel CacheLength="4" />
					</ItemsPanelTemplate>
				</ListView.ItemsPanel>
			</ListView>
</UserControl>
