<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.ContentDialogTests.ContentDialog_Closing"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.ContentDialogTests"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="400">

	<Grid>
		<StackPanel>
			<TextBlock Text="ContentDialog Closing tests"
					   Margin="50" />
			<Button x:Name="AutoCloseDialog"
					Content="Show auto-closing dialog"
					Click="Button_Click" />
			<Button x:Name="DeferredDialog"
					Content="Show dialog with deferred close"
					Click="DeferredDialog_Click" />
			<Button x:Name="PrimaryDialog"
					Content="Show dialog with Primary button"
					Click="PrimaryDialog_Click" />
			<Button x:Name="PrimaryDialogCancelClosing"
					Content="Show dialog with Primary button and cancel closing"
					Click="PrimaryDialogCancelClosing_Click" />
			<TextBlock x:Name="ResultTextBlock"
					   Margin="50" />
			<TextBlock x:Name="DidCloseTextBlock"
					   Text="Not closed"
					   Margin="50" />
		</StackPanel>
	</Grid>
</UserControl>
