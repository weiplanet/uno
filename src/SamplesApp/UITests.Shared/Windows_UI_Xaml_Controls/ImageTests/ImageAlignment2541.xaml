<Page
	x:Class="UITests.Windows_UI_Xaml_Controls.ImageTests.ImageAlignment2541"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<StackPanel Spacing="10" Margin="10">
		<TextBlock FontSize="15">
			This is an illustration of Github bug
			<Hyperlink NavigateUri="https://github.com/unoplatform/uno/issues/2541">#2541</Hyperlink>
		</TextBlock>

		<TextBlock FontSize="16">
			The following 2 squares should be identical...
		</TextBlock>

		<Grid Width="80" Height="80" Background="Yellow">
			<Button HorizontalAlignment="Left" VerticalAlignment="Top">
				<Image Source="Assets/Slices.png" Height="30" />
			</Button>
			<ContentControl HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="Brown">
				<Image Source="Assets/Slices.png" Height="30" />
			</ContentControl>
			<Rectangle Stroke="Blue" StrokeThickness="3" />
		</Grid>

		<Grid Width="80" Height="80" Background="Yellow">
			<Button HorizontalAlignment="Left" VerticalAlignment="Top">
				<Image Source="Assets/Slices.png" Height="30" Width="30" />
			</Button>
			<ContentControl HorizontalAlignment="Left" VerticalAlignment="Bottom" Background="Brown">
				<Image Source="Assets/Slices.png" Height="30" Width="30" />
			</ContentControl>
			<Rectangle Stroke="Blue" StrokeThickness="3" />
		</Grid>
	</StackPanel>
</Page>
