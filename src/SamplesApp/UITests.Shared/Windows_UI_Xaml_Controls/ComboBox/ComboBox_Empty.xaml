<Page
	x:Class="SamplesApp.Wasm.Windows_UI_Xaml_Controls.ComboBox.ComboBox_Empty"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Grid Margin="20" HorizontalAlignment="Left" VerticalAlignment="Top" RowSpacing="10" ColumnSpacing="10">
		<Grid.RenderTransform>
			<ScaleTransform ScaleX="4" ScaleY="4" />
		</Grid.RenderTransform>
		<Grid.RowDefinitions>
			<RowDefinition Height="8" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="8" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<Rectangle Fill="Red" HorizontalAlignment="Right" Width="64" Grid.Column="1" />
		<Rectangle Fill="Red" HorizontalAlignment="Right" Width="64" Grid.Column="1" Grid.RowSpan="2" Opacity="0.3" />
		<Rectangle Height="32" VerticalAlignment="Bottom" Width="8" Fill="Green" Grid.Row="1" />
		<Rectangle Height="32" VerticalAlignment="Bottom" Fill="Green" Grid.Row="1" Grid.ColumnSpan="2" Opacity="0.3" />
		<ComboBox Grid.Row="1" Grid.Column="1" />
	</Grid>
</Page>
