<UserControl
    x:Class="SamplesApp.Wasm.Windows_UI_Xaml_Controls.ComboBox.ComboBox_IsSelected"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Uno.UI.Samples.Content.UITests.ComboBox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*" />
			<RowDefinition Height="1*" />
			<RowDefinition Height="1*" />
		</Grid.RowDefinitions>
		<ComboBox Grid.Row="0" x:Name="NoSelected" Width="120" Margin="0,12,0,0">
			<ComboBoxItem x:Name="RGBNoSelected" Content="RGB"/>
			<ComboBoxItem x:Name="HSVNoSelected" Content="HSV"/>
		</ComboBox>
		<ComboBox Grid.Row="1" x:Name="SingleSelected" Width="120" Margin="0,12,0,0">
			<ComboBoxItem x:Name="RGBSingleSelected" Content="RGB" IsSelected="True"/>
			<ComboBoxItem x:Name="HSVSingleSelected" Content="HSV"/>
		</ComboBox>
		<ComboBox Grid.Row="2" x:Name="DuplicateSelected" Width="120" Margin="0,12,0,0">
			<ComboBoxItem x:Name="RGBDuplicateSelected" Content="RGB"/>
			<ComboBoxItem x:Name="RGB2DuplicateSelected" Content="RGB" IsSelected="True"/>
			<ComboBoxItem x:Name="HSVDuplicateSelected" Content="HSV"/>
		</ComboBox>
	</Grid>
</UserControl>
