<Page
	x:Class="UITests.Windows_UI_Xaml.DragAndDrop.DragDrop_Nested"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:UITests.Windows_UI_Xaml.DragAndDrop"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Grid x:Name="_theRoot">

		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
			<RowDefinition Height="Auto" />
			<RowDefinition />
			<RowDefinition Height="20" />
		</Grid.RowDefinitions>

		<TextBlock
			Grid.Column="0"
			Grid.Row="0"
			Text="Drag sources"  />
		<Border
			x:Name="ParentDragSource"
			Background="DeepPink"
			Grid.Column="0"
			Grid.Row="1"
			Padding="15"
			CanDrag="True">
			<Border
				x:Name="NestedDragSource"
				Width="100"
				Height="100"
				CanDrag="True"
				Background="LightPink" />
		</Border>

		<TextBlock
			Grid.Column="0"
			Grid.Row="2"
			Text="Drop target" />
		<Border
			x:Name="ParentDropTarget"
			Background="DeepSkyBlue"
			Grid.Column="0"
			Grid.Row="3"
			AllowDrop="True">
			<Border
				x:Name="NestedDropTarget"
				Width="100"
				Height="100"
				AllowDrop="True"
				Background="DarkBlue" />
		</Border>

		<ScrollViewer Grid.Column="1" Grid.RowSpan="5">
			<TextBlock x:Name="Output" TextWrapping="Wrap" />
		</ScrollViewer>

		<CheckBox
			x:Name="Automated"
			Content="Automated"
			IsChecked="False"
			HorizontalAlignment="Right" />
	</Grid>
</Page>
