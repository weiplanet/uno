<Page
	x:Class="UITests.Windows_UI_Xaml_Shapes.LineStretchModes"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<ScrollViewer>
		<StackPanel Spacing="10">
			<TextBlock FontWeight="ExtraBold">None</TextBlock>
			<Slider x:Name="sliderNone" Minimum="15" Maximum="300" Value="50" />
			<StackPanel Orientation="Horizontal">
				<Border HorizontalAlignment="Center" BorderThickness="3" BorderBrush="BlueViolet" Background="DarkSeaGreen">
					<Line X1="10" Y1="10" X2="10" Y2="100"
						x:Name="None1"
						Stroke="Blue"
						Width="100"
						Height="{Binding Value, ElementName=sliderNone}"
						Fill="Cornsilk"
						Stretch="None"
						StrokeThickness="10" />
				</Border>
				<Border HorizontalAlignment="Center" BorderThickness="3" BorderBrush="BlueViolet" Background="DarkSeaGreen">
					<Line X1="10" Y1="10" X2="100" Y2="100"
						      x:Name="None2"
						      Stroke="Blue"
						      Width="100"
						      Height="{Binding Value, ElementName=sliderNone}"
						      Fill="Cornsilk"
						      Stretch="None"
						      StrokeThickness="10" />
				</Border>
				<Border HorizontalAlignment="Center" BorderThickness="3" BorderBrush="BlueViolet" Background="DarkSeaGreen">
					<Line X1="10" Y1="10" X2="100" Y2="10"
					      x:Name="None3"
					      Stroke="Blue"
					      Width="100"
					      Height="{Binding Value, ElementName=sliderNone}"
					      Fill="Cornsilk"
					      Stretch="None"
					      StrokeThickness="10" />
				</Border>
			</StackPanel>
			<TextBlock FontWeight="ExtraBold">Fill</TextBlock>
			<Slider x:Name="sliderFillNormal" Minimum="10" Maximum="300" Value="45" />
			<StackPanel Orientation="Horizontal">
				<Border HorizontalAlignment="Center" BorderThickness="3" BorderBrush="BlueViolet" Background="DarkSeaGreen">
					<Line X1="10" Y1="10" X2="10" Y2="100"
					      x:Name="Fill1"
					      Stroke="Blue"
					      Width="100"
					      Height="{Binding Value, ElementName=sliderFillNormal}"
					      Fill="Cornsilk"
					      Stretch="Fill"
					      StrokeThickness="10" />
				</Border>
				<Border HorizontalAlignment="Center" BorderThickness="3" BorderBrush="BlueViolet" Background="DarkSeaGreen">
					<Line X1="10" Y1="10" X2="100" Y2="100"
					      x:Name="Fill2"
					      Stroke="Blue"
					      Width="100"
					      Height="{Binding Value, ElementName=sliderFillNormal}"
					      Fill="Cornsilk"
					      Stretch="Fill"
					      StrokeThickness="10" />
				</Border>
				<Border HorizontalAlignment="Center" BorderThickness="3" BorderBrush="BlueViolet" Background="DarkSeaGreen">
					<Line X1="10" Y1="10" X2="100" Y2="10"
					      x:Name="Fill3"
					      Stroke="Blue"
					      Width="100"
					      Height="{Binding Value, ElementName=sliderFillNormal}"
					      Fill="Cornsilk"
					      Stretch="Fill"
					      StrokeThickness="10" />
				</Border>
			</StackPanel>
			<TextBlock FontWeight="ExtraBold">UniformToFill</TextBlock>
			<Slider x:Name="sliderUniformToFillNormal" Minimum="5" Maximum="300" Value="125" />
			<StackPanel Orientation="Horizontal">
				<Border HorizontalAlignment="Center" BorderThickness="3" BorderBrush="BlueViolet" Background="DarkSeaGreen">
					<Line X1="10" Y1="10" X2="10" Y2="100"
					      x:Name="UniformToFill1"
					      Stroke="Blue"
					      Width="100"
					      Height="{Binding Value, ElementName=sliderUniformToFillNormal}"
					      Fill="Cornsilk"
					      Stretch="UniformToFill"
					      StrokeThickness="10" />
				</Border>
				<Border HorizontalAlignment="Center" BorderThickness="3" BorderBrush="BlueViolet" Background="DarkSeaGreen">
					<Line X1="10" Y1="10" X2="100" Y2="100"
					      x:Name="UniformToFill2"
					      Stroke="Blue"
					      Width="100"
					      Height="{Binding Value, ElementName=sliderUniformToFillNormal}"
					      Fill="Cornsilk"
					      Stretch="UniformToFill"
					      StrokeThickness="10" />
				</Border>
				<Border HorizontalAlignment="Center" BorderThickness="3" BorderBrush="BlueViolet" Background="DarkSeaGreen">
					<Line X1="10" Y1="10" X2="100" Y2="10"
					      x:Name="UniformToFill3"
					      Stroke="Blue"
					      Width="100"
					      Height="{Binding Value, ElementName=sliderUniformToFillNormal}"
					      Fill="Cornsilk"
					      Stretch="UniformToFill"
					      StrokeThickness="10" />
				</Border>
			</StackPanel>
			<TextBlock FontWeight="ExtraBold">Uniform</TextBlock>
			<Slider x:Name="sliderUniformNormal" Minimum="20" Maximum="300" Value="150" />
			<StackPanel Orientation="Horizontal">
				<Border HorizontalAlignment="Center" BorderThickness="3" BorderBrush="BlueViolet" Background="DarkSeaGreen">
					<Line X1="10" Y1="10" X2="10" Y2="100"
					      x:Name="Uniform1"
					      Stroke="Blue"
					      Width="100"
					      Height="{Binding Value, ElementName=sliderUniformNormal}"
					      Fill="Cornsilk"
					      Stretch="Uniform"
					      StrokeThickness="10" />
				</Border>
				<Border HorizontalAlignment="Center" BorderThickness="3" BorderBrush="BlueViolet" Background="DarkSeaGreen">
					<Line X1="10" Y1="10" X2="100" Y2="100"
					      x:Name="Uniform2"
					      Stroke="Blue"
					      Width="100"
					      Height="{Binding Value, ElementName=sliderUniformNormal}"
					      Fill="Cornsilk"
					      Stretch="Uniform"
					      StrokeThickness="10" />
				</Border>
				<Border HorizontalAlignment="Center" BorderThickness="3" BorderBrush="BlueViolet" Background="DarkSeaGreen">
					<Line X1="10" Y1="10" X2="100" Y2="10"
					      x:Name="Uniform3"
					      Stroke="Blue"
					      Width="100"
					      Height="{Binding Value, ElementName=sliderUniformNormal}"
					      Fill="Cornsilk"
					      Stretch="Uniform"
					      StrokeThickness="10" />
				</Border>
			</StackPanel>
		</StackPanel>
	</ScrollViewer>
</Page>
